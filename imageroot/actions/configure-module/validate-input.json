{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure semaphoreui",
    "$id": "http://nethserver.org/json-schema/task/input/semaphoreui/configure-module",
    "description": "Configure semaphoreui",
    "examples": [
        {
            "host": "semaphoreui.domain.org",
            "http2https": true,
            "lets_encrypt": true,
            "ldap_domain": "domain.local",
            "semaphore_admin": "admin",
            "semaphore_admin_name": "Administrator",
            "semaphore_admin_email": "admin@domain.org",
            "semaphore_admin_password": "password"
        }
    ],
    "type": "object",
    "required": [
        "host",
        "http2https",
        "lets_encrypt"
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'semaphoreui.domain.org'",
            "format": "hostname",
            "pattern": "\\."
        },
        "lets_encrypt": {
            "type": "boolean",
            "title": "Let's Encrypt certificate",
            "description": "Request a valid Let's Encrypt certificate."
        },
        "http2https": {
            "type": "boolean",
            "title": "HTTP to HTTPS redirection",
            "description": "Redirect all the HTTP requests to HTTPS"
        },
        "ldap_domain": {
            "type": "string",
            "title": "LDAP domain",
            "description": "LDAP domain for user authentication"
        },
        "semaphore_admin": {
            "type": "string",
            "title": "Semaphore admin username"
        },
        "semaphore_admin_name": {
            "type": "string",
            "title": "Semaphore admin display name"
        },
        "semaphore_admin_email": {
            "type": "string",
            "title": "Semaphore admin email"
        },
        "semaphore_admin_password": {
            "type": "string",
            "title": "Semaphore admin password"
        }
    }
}
